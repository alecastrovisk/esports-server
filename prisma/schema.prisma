// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id
  title     String
  bannerUrl String
}

model Ad {
  id              String   @id
  name            String
  yearsPlaying    Int
  discord         String
  weeksDays       String
  hourStart       Int
  hourEnd         Int
  useVoiceChannel Boolean
  created_at      DateTime @default(now())
}
